set showstatuslinks='command'

set! browser.tabs.closeButtons=2

set guioptions=N

colo molokai

set titlestring=Mozilla\ Firefox

set! browser.tabs.closeWindowWithLastTab=false

set hlfind
set incfind

set findcase=smart

set complete=slb

set wildmode=list:full

map - <Leader>

map <Leader>f f

map gt l
map gT h

nmap -builtin j 15j
nmap -builtin k 15k

map <Leader><Space> :noh<cr>

javascript <<EOF
function copyTitle() {
	dactyl.clipboardWrite(buffer.title, true);
}
EOF

map -g user Y -s  -js copyTitle()

silent qmark f https://facebook.com/
silent qmark g https://github.com/
silent qmark m https://mail.google.com/
silent qmark p http://piperka.net/
silent qmark n http://news.ycombinator.com/

:autocmd LocationChange facebook.com :normal! <C-z>

